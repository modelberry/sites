{
  "name": "@wheelroom/css-theme",
  "version": "1.0.0",
  "description": "Library for working with css theme variables",
  "exports": {
    "./*": "./build/*.js"
  },
  "typesVersions": {
    "*": {
      "*": [
        "build/*"
      ]
    }
  },
  "scripts": {
    "build": "npm-run-all clean build:*",
    "build:lint": "eslint 'src/**/*.{js,ts,tsx}'",
    "build:module": "rollup --config",
    "build:test": "jest --silent --passWithNoTests",
    "build:types": "tsc -p tsconfig.packages.json --declaration --emitDeclarationOnly --declarationDir build",
    "clean": "rimraf build/*",
    "dev": "rollup --config --watch"
  },
  "peerDependencies": {
    "react": "17.0.2",
    "react-dom": "17.0.2"
  }
}
